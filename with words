import random
a = ['rock','paper','scirrors']
user_choice = input("Enter your choice: type rock, paper, scirrors ")
computer_choice = random.choice(a)
print("computer choice")
print(computer_choice)
if computer_choice == user_choice:
    print("It's draw")
elif user_choice=='rock' and computer_choice=='paper':
    print("you lose.")
elif user_choice=='rock' and computer_choice=='scirrors':
    print("you win")
elif user_choice=='paper' and computer_choice=='rock':
    print("you win")
elif user_choice=='paper' and computer_choice=='scirrors':
    print("you lose")
elif user_choice=='scirrors' and computer_choice=='rock':
    print("you lose")
elif user_choice=='scirrors' and computer_choice=='paper':
    print("you win")
